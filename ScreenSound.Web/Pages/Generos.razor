@page "/generos"
@using Microsoft.AspNetCore.Authorization

@inject GeneroAPI generoAPI
@inject NavigationManager navigationManager

<MudStack Class="my-4" Row="true" Justify="Justify.SpaceBetween">
    <MudText Class="mb-4" Typo="Typo.h4">Gêneros Cadastrados</MudText>
    <MudPagination Count="@_totalPaginas" SelectedChanged="PaginaMudou"></MudPagination>
</MudStack>

@if (_generosPorPagina is not null)
{
    <MudGrid>
        @foreach (var genero in _generosPorPagina)
        {
            <MudItem xs="12" sm="6" md="4" lg="3" xl="2">
                <CardGenero generoResponse="genero" />
            </MudItem>
        }
    </MudGrid>
}
else
{
    <p><em>Carregando...</em></p>
}

@code {
    private ICollection<GeneroResponse>? _generos;
    private int _tamanho = 8; // Quantidade de artistas que devem ser mostrados na página
    private int _totalItens;
    private int _totalPaginas;
    private ICollection<GeneroResponse>? _generosPorPagina;

    protected override async Task OnInitializedAsync()
    {
        _generos = await generoAPI.GetGenerosAsync();

        if (_generos is not null)
        {
            _generos = _generos.OrderByDescending(a => a.Id).ToList();
            _totalItens = _generos.Count();
            _totalPaginas = Convert.ToInt32(Math.Ceiling((_totalItens * 1.0) / _tamanho));

            this.PaginaMudou(1);
        }
    }

    private void PaginaMudou(int numeroPagina)
    {
        var indice = numeroPagina - 1;
        _generosPorPagina = _generos!
            .Skip(_tamanho * indice)
            .Take(_tamanho)
            .ToList();
    }
}