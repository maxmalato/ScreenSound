@page "/musicas-por-artista"
@using Microsoft.AspNetCore.Authorization
@inject MusicaAPI musicaAPI

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-8">
    <MudGrid Class="mb-6 align-center">
        <MudItem xs="12" sm="6">
            <MudText Typo="Typo.h4" Class="fw-bold">Músicas</MudText>
            <MudText Typo="Typo.subtitle1" Class="mud-text-secondary">Gerencie o catálogo musical dos seus artistas</MudText>
        </MudItem>
        <MudItem xs="12" sm="6" Class="d-flex justify-sm-end">
            <MudTextField T="string" 
                          ValueChanged="@(s => OnSearch(s))"
                          Placeholder="Pesquisar música ou artista..." 
                          Adornment="Adornment.Start" 
                          AdornmentIcon="@Icons.Material.Filled.Search" 
                          Variant="Variant.Outlined" 
                          Margin="Margin.Dense"
                          Class="mud-width-full"
                          Style="max-width: 350px;"
                          Immediate="true"
                          Clearable="true"
                          OnClearClick="ResetSearch" />
        </MudItem>
    </MudGrid>

    @if (_musicasPorPagina is not null)
    {
        @if (_musicasPorPagina.Any())
        {
            <MudGrid>
                @foreach (var musica in _musicasPorPagina)
                {
                    <MudItem xs="12" sm="6" md="4" lg="3" xl="2">
                        <CardMusica Musica="musica" />
                    </MudItem>
                }
            </MudGrid>

            <div class="d-flex justify-center mt-12 mb-8">
                <MudPagination Color="Color.Primary" 
                               Variant="Variant.Filled" 
                               Count="@_totalPaginas" 
                               SelectedChanged="PaginaMudou" 
                               Class="mud-text-transform-none" />
            </div>
        }
        else
        {
            <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="mt-4 rounded-lg">
                Nenhuma música encontrada com esse critério.
            </MudAlert>
        }
    }
    else
    {
        <MudGrid>
            @for (int i = 0; i < 8; i++)
            {
                <MudItem xs="12" sm="6" md="4" lg="3" xl="2">
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="200px" Class="rounded-lg mb-2" />
                    <MudSkeleton Width="80%" Height="24px" />
                    <MudSkeleton Width="50%" />
                </MudItem>
            }
        </MudGrid>
    }
</MudContainer>

<style>
    .mud-text-transform-none {
        text-transform: none !important;
    }
</style>

@code {
    private ICollection<MusicaResponse>? _musicas;
    private ICollection<MusicaResponse>? _musicasFiltradas;
    private ICollection<MusicaResponse>? _musicasPorPagina;
    
    private string _searchString = "";
    private int _tamanho = 8;
    private int _totalItens;
    private int _totalPaginas;

    protected override async Task OnInitializedAsync()
    {
        _musicas = await musicaAPI.GetMusicasAsync();

        if (_musicas is not null)
        {
            _musicas = _musicas.OrderByDescending(m => m.Id).ToList();
            _musicasFiltradas = _musicas;
            AtualizarPaginacao();
        }
    }

    private void OnSearch(string text)
    {
        _searchString = text;
        if (_musicas != null)
        {
            _musicasFiltradas = _musicas
                .Where(m => m.Nome.Contains(_searchString, StringComparison.OrdinalIgnoreCase))
                .ToList();
            AtualizarPaginacao();
        }
    }

    private void ResetSearch()
    {
        _searchString = "";
        _musicasFiltradas = _musicas;
        AtualizarPaginacao();
    }

    private void AtualizarPaginacao()
    {
        _totalItens = _musicasFiltradas?.Count() ?? 0;
        _totalPaginas = (int)Math.Ceiling((_totalItens * 1.0) / _tamanho);
        PaginaMudou(1);
    }

    private void PaginaMudou(int numeroPagina)
    {
        var indice = numeroPagina - 1;
        _musicasPorPagina = _musicasFiltradas?
            .Skip(_tamanho * indice)
            .Take(_tamanho)
            .ToList();
    }
}