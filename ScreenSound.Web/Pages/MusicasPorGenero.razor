@page "/musicas-por-genero"
@inject GeneroAPI generoAPI
@inject MusicaAPI musicaAPI

<MudContainer MaxWidth="MaxWidth.ExtraLarge" Class="mt-8 mb-12">
    <MudText Typo="Typo.h4" Class="fw-bold mb-2">Explorar por Gênero</MudText>
    <MudText Typo="Typo.subtitle1" Class="mud-text-secondary mb-6">Selecione um estilo para filtrar seu catálogo musical</MudText>

    <MudPaper Class="pa-4 mb-8 mud-elevation-2 rounded-lg">
        <MudText Typo="Typo.overline" Class="mb-2 d-block">Gêneros Disponíveis</MudText>
        @if (_generos is not null)
        {
            <MudChipSet T="GeneroResponse" SelectedValueChanged="OnGeneroChanged" Filter="true" Mandatory="false">
                @foreach (var genero in _generos)
                {
                    <MudChip Value="@genero" 
                             Text="@genero.Nome" 
                             Variant="Variant.Text" 
                             Color="Color.Primary" 
                             SelectedColor="Color.Primary" 
                             Class="mud-text-transform-none" />
                }
            </MudChipSet>
        }
        else
        {
            <div class="d-flex gap-2">
                <MudSkeleton Width="80px" Height="40px" Class="rounded-pill" />
                <MudSkeleton Width="100px" Height="40px" Class="rounded-pill" />
                <MudSkeleton Width="90px" Height="40px" Class="rounded-pill" />
            </div>
        }
    </MudPaper>

    @if (_carregando)
    {
        <MudGrid>
            @for (int i = 0; i < 4; i++)
            {
                <MudItem xs="12" sm="6" md="4" lg="3">
                    <MudSkeleton SkeletonType="SkeletonType.Rectangle" Height="200px" Class="rounded-lg mb-2" />
                    <MudSkeleton Width="60%" />
                    <MudSkeleton Width="40%" />
                </MudItem>
            }
        </MudGrid>
    }
    else if (_musicasFiltradas is not null)
    {
        @if (_musicasFiltradas.Any())
        {
            <MudGrid>
                @foreach (var musica in _musicasFiltradas)
                {
                    <MudItem xs="12" sm="6" md="4" lg="3">
                        <CardMusica Musica="musica" />
                    </MudItem>
                }
            </MudGrid>
        }
        else
        {
            <MudAlert Severity="Severity.Info" Variant="Variant.Outlined" Class="rounded-lg">
                Nenhuma música encontrada para este gênero. Tente selecionar outro estilo.
            </MudAlert>
        }
    }
</MudContainer>

<style>
    .mud-text-transform-none {
        text-transform: none !important;
    }
</style>

@code {
    private ICollection<GeneroResponse>? _generos;
    private ICollection<MusicaResponse>? _musicasFiltradas;
    private bool _carregando = false;

    protected override async Task OnInitializedAsync()
    {
        _generos = await generoAPI.GetGenerosAsync();
    }

    private async Task OnGeneroChanged(GeneroResponse genero)
    {
        if (genero is not null)
        {
            _carregando = true;
            try 
            {
                _musicasFiltradas = await musicaAPI.GetMusicasPorGeneroAsync(genero.Id);
            }
            finally 
            {
                _carregando = false;
            }
        }
        else 
        {
            _musicasFiltradas = null;
        }
    }
}