<MudCard>
    <MudCardMedia Image="images/cardArtista.png"></MudCardMedia>

    <MudCardHeader>
        <MudCardContent>
            <MudText Typo="Typo.h6">@Musica!.Nome</MudText>
        </MudCardContent>
    </MudCardHeader>

    <MudCardContent>
        <MudText Typo="Typo.body2">Artista: @Musica!.NomeArtista</MudText>
    </MudCardContent>

    <MudCardActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Href="@($"/editar-musica/{Musica!.Nome}")">Ver detalhes</MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public MusicaResponse? Musica { get; set; }
}