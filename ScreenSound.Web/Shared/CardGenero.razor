<MudCard Class="mud-height-full">

    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@generoResponse!.Nome</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">
            @generoResponse!.Descricao
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Outlined" Color="Color.Primary" Href=@($"/editar-genero/{generoResponse?.Nome}")>
            Ver Detalhes
        </MudButton>
    </MudCardActions>
</MudCard>

@code {
    [Parameter]
    public GeneroResponse? generoResponse { get; set; }

}